
@{
    ViewBag.Title = "EmployeeRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EmployeeRegistration</h2>

<script src="~/assets/js/controllers/TestController.js"></script>

<section id="contact" ng-controller="mycntlr">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cotact-area">
                    <div class="row">
                        <div class="form-group col-md-3 input-group pull-right">

                          
                            <div class="input-group">
                                <input type="text" id="SearchTxt" class="form-control" placeholder="Search" ng-model="SearchVM" />
                                <span class="input-group-addon">
                                    <i class="fa fa-search"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-12">

                            <div class="contact-area-right">

                                <div class="row">

                                    <table class="table table-bordered table-striped col-lg-12"
                                           enable-filtering="false"
                                           tr-ng-grid=""
                                           items="testdata"
                                           page-items="NoRowsVM"
                                           total-items="TotalRowCount"
                                           filter-by="SearchVM"
                                           current-page="CurrentPageVm"
                                           order-by="IDVm"
                                           order-by-reverse="true"
                                           on-data-required="onServerSideItemsRequested(currentPage, pageItems, filterBy, filterByFields, orderBy, orderByReverse)">


                                        <thead>
                                            <tr>
                                                <th display-name="Name" field-name="" enable-filtering="false" enable-sorting="false"></th>
                                                <th display-name="Email" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                                <th display-name="Phone Number" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                                <th display-name="Emirates id" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                                <th display-name="Emirates Expiry Date" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                                <th display-name="Passport Number" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                                <th display-name="Passport Expiry Date" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                                <th display-name="Doj" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                                <th display-name="Salary" field-name="" enable-filtering="false" enable-sorting="true">
                                                </th>
                                            </tr>

                                        </thead>

                                        <tbody>
                                            <tr>

                                                <td>
                                                    <button type="button" class="comment-btn" data-toggle="modal" data-target="#gridSystemModal" ng-click="EditDetails(gridItem)">EDIT</button>

                                                    <button type="button" class="comment-btn" data-toggle="modal" data-target="#delete " ng-click="DeleteData(gridItem)">Delete</button>


                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>


                                    @*<input type="hidden" ng-model="testdata.NameVm" />*@
                                    <button type="button" class="comment-btn" data-toggle="modal" data-target="#gridSystemModal" ng-click="AddNewItem()">Add New Item</button>
                                    <button type="button" class="comment-btn" ng-click="ResetGrid()">Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="gridSystemModal" class="modal fade " tabindex="-1" role="dialog" aria-labelledby="gridModalLabel" aria-hidden="true">
        <div class="modal-dialog ">
            @* role="document"*@
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="Close()"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridModalLabel">View Details</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid bd-example-row">

                        <form action="" class="comments-form contact-form">
                            <div class="row">

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Employee Id </h5>
                                    <input type="text" id="ID" class="form-control " placeholder="[Employee Id]" ng-model="ids">
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Employee Name</h5>

                                    <input type="text" id="NameEmp" class="form-control" placeholder="[Employee Name]" ng-model="Name">
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Age </h5>
                                    <input type="text" id="AgeEmp" class="form-control" placeholder="[Age]" ng-model="Age">
                                </div>
                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Gender </h5>

                                    <label class="radio-inline">
                                        <input type="radio" id="femaleRadio" class="radio-inline" value="Female" name="Gender"> Female
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" id="maleRadio" value="Male" name="Gender"> Male
                                    </label>

                                </div>

                            </div>
                            <div class="row">

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">DOB</h5>
                                    <div class="input-group">
                                        <input type="text" id="DOBEmp" class="form-control" placeholder="[DOB]" ng-model="Dob" />
                                        <span class="input-group-addon date">
                                            <i class="fa fa-calendar"></i>
                                        </span>

                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Email Id </h5>
                                    <input type="email" id="EmailEmp" class="form-control" placeholder="Email" ng-model="Email">
                                </div>



                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Passport </h5>
                                    <input type="text" id="Passport" class="form-control" placeholder="[Passport]" ng-model="Passport">
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Passport Expiry Date </h5>
                                    <div class="input-group">
                                        <input type="text" id="PassExp" class="form-control" placeholder="[Passport Expiry Date]" ng-model="PassExp" />
                                        <span class="input-group-addon date">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>

                            </div>

                            <div class="row">

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Phone No: </h5>
                                    <input type="text" id="Phone" class="form-control" placeholder="[Phone No]" ng-model="PhNo">
                                </div>


                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Emirates Id No: </h5>
                                    <input type="text" id="Emirates" class="form-control" placeholder="[Emirates Id]" ng-model="Emirates">
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Emirtes Expiry Date </h5>
                                    <div class="input-group">
                                        <input type="text" id="EmiratesExp" class="form-control" placeholder="[Emirates Expiry Date]" ng-model="EmiratesExp" />
                                        <span class="input-group-addon date">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Nationality </h5>
                                    <input type="text" id="Nationality" class="form-control" placeholder="[Nationality]" ng-model="Nationality">
                                </div>
                            </div>
                            <div class="row">

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Qualification </h5>
                                    <input type="text" id="Qualification" class="form-control" placeholder="[Qualification]" ng-model="Qualification">
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Date of Join </h5>
                                    <div class="input-group">
                                        <input type="text" id="DOJ" class="form-control" placeholder="[Date Of Joining]" ng-model="DOJ" />
                                        <span class="input-group-addon date">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Years Completed </h5>
                                    <input type="text" id="YearCompleted" class="form-control" placeholder="[Completed Year]" ng-model="YOC">
                                </div>

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Designation </h5>
                                    <input type="text" id="Designation" class="form-control" placeholder="[Designation]" ng-model="Designation" />
                                </div>
                            </div>
                            <div class="row">

                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Salary </h5>
                                    <input type="text" placeholder="[Salary]" id="Salary" rows="3" class="form-control" ng-model="Salary" />
                                </div>
                                <div class="form-group col-lg-6">


                                    <h5 class="h5-header">Address </h5>
                                    <input type="text" placeholder="[Address]" id="Address" rows="3" class="form-control" ng-model="Address" />
                                </div>


                                <div class="form-group col-md-3">
                                    <h5 class="h5-header">Type </h5>
                                    <select id="EmpTyp" ng-model="EmpTyp" class="form-control">
                                        <option value="">-- Select --</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

                <div class="modal-footer">
                    <input type="button" class="comment-btn btn-primary" ng-click="SaveData()" value="{{ButtonText}}" />
                    <input type="button" class="comment-btn" ng-click="Reset()" value="Reset" />
                    <button type="button" class="comment-btn" data-dismiss="modal" ng-click="Close()">Close</button>

                </div>
            </div>
            </div>
        </div>
   


    @*For deletete Confirmation*@
    <div class="modal fade" id="delete">
        <div class="modal-dialog" role="document">
            <div class="modal-content col-lg-8">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Delete Confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete the record ?&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="comment-btn" data-dismiss="modal" ng-click="ConfirmDelete()">Yes</button>
                    <button type="button" class="comment-btn">No</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
   
</section>
<script>
         $(function() {
             $("#DOBEmp").datepicker();
             $("#DOBEmp").datepicker().show();

             $("#EmiratesExp").datepicker();
             $("#EmiratesExp").datepicker().show();

             $("#PassExp").datepicker();
             $("#PassExp").datepicker().show();
         });
</script>
