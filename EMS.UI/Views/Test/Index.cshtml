                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="gridSystemModal" class="modal fade " tabindex="-1" role="dialog" aria-labelledby="gridModalLabel" aria-hidden="true">
        <div class="modal-dialog ">
            @* role="document"*@
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"ng-click="Close()"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridModalLabel">View Details</h4>
                </div>
                <div class="modal-body">
                    <div class="container-fluid bd-example-row">

                        <form action="" class="comments-form contact-form">
                            <div class="form-group">
                                <input type="text " id="ID" class="form-control " placeholder="ID" ng-model="ids"readonly>
                            </div>

                            <div class="form-group">
                                <input type="text"id="NameTxt" class="form-control" placeholder="Your Name" ng-model="Name">
                            </div>
                            <div class="form-group">
                                <input type="email"id="EmailTxt" class="form-control" placeholder="Email" ng-model="Email">
                            </div>
                            <div class="form-group">
                                <input type="text"id="SubTxt" class="form-control" placeholder="Subject" ng-model="Subject">
                            </div>
                            <div class="form-group">
                                <textarea placeholder="Comment" id="CommTxt"  rows="3" class="form-control" ng-model="Comment"></textarea>
                            </div>
                           <input type="button" class="comment-btn" ng-click="SaveData()" value="{{ButtonText}}" />
                                                     
                            <input type="button" class="comment-btn" ng-click="Reset()" value="Reset"/>

                        </form>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="comment-btn" data-dismiss="modal" ng-click="Close()">Close</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
    </div>


    @*For deletete Confirmation*@
    <div class="modal fade" id="delete">
        <div class="modal-dialog" role="document">
            <div class="modal-content col-lg-8">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Delete Confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete the record ?&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="comment-btn" data-dismiss="modal"ng-click="ConfirmDelete()">Yes</button>
                    <button type="button" class="comment-btn">No</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</section>