<section id="contact" ng-controller="mycntlr">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cotact-area">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-area-right">

                                <div class="row">



                                    <table class="table table-bordered table-striped col-lg-12"
                                   enable-filtering="false"
                                   tr-ng-grid=""
                                   items="testdata"
                                   page-items="NoRowsDisplay"
                                   total-items="Totalrowcount"
                                   current-page="setcurrentpage"
                                   order-by="OrderBy" order-by-reverse="OrderByReversed"
                                   on-data-required="onServerSideItemsRequested(currentPage, pageItems, filterBy, filterByFields, orderBy, orderByReverse)">
                                        @*filter-by="GlobalFilter"*@
                                        <thead>
                                            <tr>
                                                <th class="col-lg-2">ID</th>
                                                <th class="col-lg-2">Name</th>
                                                <th class="col-lg-2">Email</th>
                                                <th class="col-lg-2">Subject</th>
                                                <th class="col-lg-2">Comment</th>
                                                <th class="col-lg-2"></th>
                                            </tr>


                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="testdata in testdata">
                                                <td>{{testdata.IDVm}}</td>
                                                <td>{{testdata.NameVm}}</td>
                                                <td>{{testdata.EmailVm}}</td>
                                                <td>{{testdata.SubjectVm}}</td>
                                                <td>{{testdata.CommentVm}}</td>
                                                <td>
                                                    <button type="button" class="comment-btn" data-toggle="modal" data-target="#gridSystemModal" ng-click="EditDetails(testdata)">EDIT</button>

                                                    <button type="button" class="comment-btn" data-toggle="modal" data-target="#delete " ng-click="DeleteData(testdata)">Delete</button>

                                                    @*data-target="#delete"*@
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>







