<script src="~/assets/js/controllers/TestController.js"></script>

<section id="contact" ng-controller="mycntlr">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cotact-area">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-area-right">
                                <form action="" class="comments-form contact-form">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Your Name" ng-model="Name" >
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Email" ng-model="Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Subject" ng-model="Subject">
                                    </div>
                                    <div class="form-group">
                                        <textarea placeholder="Comment" rows="3" class="form-control" ng-model="Comment"></textarea>
                                    </div>
                                    <button class="comment-btn" ng-click="SaveData()">Submit Comment</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>